                x:Key="BoolToVis"
                TrueValue="Visible" FalseValue="Hidden" />
        </ResourceDictionary>
    </Window.Resources>
    <Window.InputBindings>
        <KeyBinding Key="F1" Command="{Binding AboutCommand}" />
    </Window.InputBindings>
    <Border BorderThickness="0 1 0 0" BorderBrush="#11000000">
